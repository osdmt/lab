@import '../../_variables.styl'

.tabs
    display flex
    &__itemPane
        display none
        &_active
            @media all and (max-width ($breakpoints.md - 1px))
                display block
    &__pill
        box-sizing: border-box
        color rgb(107, 117, 135);
        font-size: 16px
        padding: 25px 20px
        font-family $font-accented
        &_active
            color #2e3192
            background: #fff;
            box-shadow: 0px 14px 40px rgba(43,60,105,0.1);
            border-radius: 6px;
        &:hover
            cursor pointer
            color #2e3192
    &__pane
        display none
        &_active
            @media all and (min-width $breakpoints.md)
                display block